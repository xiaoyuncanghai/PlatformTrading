<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/size_12dp"
    android:layout_marginTop="@dimen/size_12dp"
    android:layout_marginEnd="@dimen/size_12dp"
    android:background="@drawable/all_person_item_shape">

    <ImageView
        android:id="@+id/person_item_user_image"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/size_15dp"
        android:layout_marginTop="@dimen/size_15dp"
        android:src="@drawable/default_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/person_item_user_uuid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_15dp"
        android:text="111111111111111111"
        android:textColor="@color/gray_33"
        android:textSize="@dimen/text_size_13sp"
        app:layout_constraintStart_toEndOf="@+id/person_item_user_image"
        app:layout_constraintTop_toTopOf="@+id/person_item_user_image" />

    <TextView
        android:id="@+id/person_item_user_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_5dp"
        android:text="2222222222222222"
        android:textColor="@color/gray_66"
        android:textSize="@dimen/text_size_11sp"
        app:layout_constraintStart_toStartOf="@+id/person_item_user_uuid"
        app:layout_constraintTop_toBottomOf="@+id/person_item_user_uuid" />


    <TextView
        android:id="@+id/person_item_user_publish_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_2dp"
        android:text="333333333333333"
        android:textColor="@color/gray_66"
        android:textSize="@dimen/text_size_11sp"
        app:layout_constraintStart_toEndOf="@+id/person_item_user_location"
        app:layout_constraintTop_toTopOf="@+id/person_item_user_location" />

    <TextView
        android:id="@+id/tv_person_search_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_15dp"
        android:layout_marginTop="@dimen/size_20dp"
        android:layout_marginEnd="@dimen/size_15dp"
        android:text="空调冰箱洗衣机啦喔"
        android:textColor="@color/gray_33"
        android:textSize="@dimen/size_17dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/person_item_user_image" />

    <LinearLayout
        android:id="@+id/ll_person_search_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_15dp"
        android:layout_marginTop="@dimen/size_15dp"
        android:layout_marginEnd="@dimen/size_15dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_person_search_title">

        <ImageView
            android:id="@+id/iv_pic1"
            android:layout_width="@dimen/size_100dp"
            android:layout_height="@dimen/size_100dp"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/all_person_item_pic_shape" />

        <ImageView
            android:id="@+id/iv_pic2"
            android:layout_width="@dimen/size_100dp"
            android:layout_height="@dimen/size_100dp"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/all_person_item_pic_shape" />

        <ImageView
            android:id="@+id/iv_pic3"
            android:layout_width="@dimen/size_100dp"
            android:layout_height="@dimen/size_100dp"
            android:background="@drawable/all_person_item_pic_shape" />
    </LinearLayout>

    <View
        android:id="@+id/spinner_all_person_search"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@color/gray_EE"
        app:layout_constraintTop_toBottomOf="@+id/ll_person_search_image" />

    <TextView
        android:id="@+id/tv_person_search_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_15dp"
        android:layout_marginTop="@dimen/size_15dp"
        android:layout_marginBottom="@dimen/size_15dp"
        android:text="出资: "
        android:textColor="@color/gray_33"
        android:textSize="@dimen/text_size_14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_all_person_search" />

    <TextView
        android:id="@+id/tv_person_search_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_15dp"
        android:layout_marginBottom="@dimen/size_15dp"
        android:text="￥1111"
        android:textColor="@color/gray_blue"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_person_search_price"
        app:layout_constraintTop_toBottomOf="@+id/spinner_all_person_search" />


    <TextView
        android:id="@+id/tv_person_search_see"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_15dp"
        android:layout_marginEnd="@dimen/size_15dp"
        android:layout_marginBottom="@dimen/size_15dp"
        android:background="@drawable/person_item_backgroud"
        android:text="去看看"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_all_person_search" />
</androidx.constraintlayout.widget.ConstraintLayout>
