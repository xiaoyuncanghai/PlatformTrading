<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/near_header_layout_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:orientation="horizontal"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="12dp"
        android:gravity="center"
        android:text="附近"
        android:textColor="@color/white"
        android:textSize="@dimen/size_15dp" />

    <LinearLayout
        android:id="@+id/near_search"
        android:layout_width="0dp"
        android:layout_height="@dimen/size_32dp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/size_12dp"
        android:layout_marginEnd="@dimen/size_12dp"
        android:layout_weight="1"
        android:background="@drawable/share_background_shape"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_10dp"
        android:paddingRight="@dimen/size_10dp">

        <ImageView
            android:id="@+id/tv_icon_search"
            android:layout_width="@dimen/size_12dp"
            android:layout_height="@dimen/size_12dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/size_10dp"
            android:src="@drawable/ic_search"
            android:textColor="@color/secondaryText"
            android:textSize="@dimen/text_size_12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="搜一搜"
            android:textColor="@color/secondaryText"
            android:textSize="@dimen/text_size_12sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_user_search"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_user_search"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_20dp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/size_8dp"
            android:gravity="center"
            android:text="大家都在搜"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_13sp" />

        <ImageView
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/size_12dp"
            android:layout_width="5dp"
            android:layout_height="8dp"
            android:src="@drawable/ic_choose" />

    </LinearLayout>


</LinearLayout>
