<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="250dp"
    android:layout_marginTop="@dimen/size_20dp"
    android:layout_marginEnd="@dimen/size_12dp"
    android:background="@drawable/near_item_backgroud"
    android:orientation="vertical"
    tools:ignore="MissingConstraints">

    <ImageView
        android:id="@+id/near_promote_iv"
        android:layout_width="@dimen/size_140dp"
        android:layout_height="@dimen/size_140dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_16dp"
        android:background="@drawable/default_error"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/near_promote_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginTop="@dimen/size_10dp"
        android:layout_marginEnd="@dimen/size_16dp"
        android:text="这是一个标题"
        android:textColor="@color/gray_33"
        android:textSize="@dimen/text_size_13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginTop="@dimen/size_16dp"
        android:layout_marginEnd="@dimen/size_16dp"
        android:layout_marginBottom="@dimen/size_16dp">


        <TextView
            android:id="@+id/near_promote_tv_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_15dp"
            android:layout_weight="1"
            android:text="$100"
            android:textColor="@color/gray_blue"
            android:textSize="@dimen/text_size_15sp" />

        <ImageView
            android:id="@+id/near_promote_iv_to_details"
            android:layout_width="@dimen/size_12dp"
            android:layout_height="@dimen/size_12dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_to_details" />

    </LinearLayout>

</LinearLayout>
