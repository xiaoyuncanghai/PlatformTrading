<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1.5px" android:color="@color/colorPrimaryDark" />
            <solid android:color="@color/colorPrimaryDark" />
            <corners android:radius="24dp" />
            <padding android:bottom="5dp" android:left="3dp" android:right="3dp" android:top="5dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <stroke android:width="1.5px" android:color="@color/thirdText" />
            <solid android:color="@color/thirdText" />
            <corners android:radius="24dp" />
            <padding android:bottom="5dp" android:left="3dp" android:right="3dp" android:top="5dp" />
        </shape>
    </item>

    <item>
        <shape>
            <stroke android:width="1.5px" android:color="@color/colorPrimary" />
            <corners android:radius="24dp" />
            <padding android:bottom="5dp" android:left="3dp" android:right="3dp" android:top="5dp" />
            <solid android:color="@color/colorPrimary" />

        </shape>
    </item>

</selector>