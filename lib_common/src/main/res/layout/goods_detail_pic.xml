<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/size_10dp"
    android:layout_marginEnd="@dimen/size_10dp"
    android:background="@drawable/goods_detail_image_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/category_body_pic"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="@dimen/size_15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginEnd="@dimen/size_15dp"
        android:background="@drawable/goods_detail_img_background"
        android:scaleType="fitXY"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/category_body_pic2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="@dimen/size_15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="@dimen/size_15dp"
        android:background="@drawable/goods_detail_img_background"
        android:scaleType="fitXY"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/category_body_pic3"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="@dimen/size_15dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginEnd="@dimen/size_15dp"
        android:background="@drawable/goods_detail_img_background"
        android:scaleType="fitXY"
        android:visibility="gone" />

</LinearLayout>
