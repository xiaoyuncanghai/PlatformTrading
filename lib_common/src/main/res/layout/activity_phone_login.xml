<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srl_login_acc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnablePureScrollMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_15dp"
                android:layout_marginTop="@dimen/size_60dp"
                android:layout_marginEnd="@dimen/size_15dp"
                android:orientation="horizontal">

                <com.xw.repo.XEditText
                    android:id="@+id/et_acc"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:ellipsize="end"
                    android:hint="请输入手机号码"
                    android:maxLines="1"
                    android:textColor="@color/gray_33"
                    android:textColorHint="@color/bg_999999"
                    android:textSize="@dimen/text_size_17sp"
                    app:x_disableClear="true" />

                <TextView
                    android:id="@+id/tv_del_acc"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/lib_com_slt_bt_click_bg"
                    android:gravity="center"
                    android:textColor="@color/thirdText"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/size_10dp"
                android:layout_marginEnd="@dimen/size_10dp"
                android:background="@color/gray_EE" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_15dp"
                android:layout_marginTop="@dimen/size_30dp"
                android:layout_marginEnd="@dimen/size_15dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_pwd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:ellipsize="end"
                    android:hint="请输入验证码"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColor="@color/gray_33"
                    android:textColorHint="@color/bg_999999"
                    android:textSize="@dimen/text_size_17sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/size_25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/size_5dp"
                    android:layout_marginEnd="@dimen/size_5dp"
                    android:background="@color/gray_EE" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_45dp">

                    <TextView
                        android:id="@+id/tv_send_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/selector_btn_send_code"
                        android:paddingLeft="5dp"
                        android:paddingTop="4dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="4dp"
                        android:text="获取验证码"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/size_10dp"
                android:layout_marginEnd="@dimen/size_10dp"
                android:background="@color/gray_EE" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_35dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/check_box_choose"
                    style="@style/check_box_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:checked="true" />

                <TextView
                    android:id="@+id/check_box_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text="同意一点网用户协议"
                    android:textColor="@color/bg_999999"
                    android:textSize="@dimen/size_15dp" />


            </LinearLayout>

            <Button
                android:id="@+id/bt_login"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/size_30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/selector_btn"
                android:enabled="false"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_15sp" />
        </LinearLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>