<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/loading_layout"
    android:background="@color/white">

    <ProgressBar
        android:id="@+id/avon_spinner"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:indeterminateTint="@color/colorAccent"
        android:indeterminateTintMode="src_atop" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/loading"
        android:textColor="@color/cp_color_gray_deep"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/avon_spinner"
        app:layout_constraintStart_toStartOf="@+id/avon_spinner"
        app:layout_constraintTop_toBottomOf="@+id/avon_spinner" />

</androidx.constraintlayout.widget.ConstraintLayout>