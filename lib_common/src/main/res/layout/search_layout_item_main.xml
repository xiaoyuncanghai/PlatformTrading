<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/size_20dp"
    android:layout_marginTop="@dimen/size_20dp"
    android:layout_marginEnd="@dimen/size_20dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/search_promote_iv"
        android:layout_width="@dimen/size_100dp"
        android:layout_height="@dimen/size_75dp"
        android:src="@drawable/ic_common_happy_yuu1_cat1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/size_75dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/search_promote_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/size_15dp"
            android:layout_marginTop="@dimen/dp_10"
            android:text="这是一个标题"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/search_promote_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/size_15dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="$100" />
    </RelativeLayout>
</LinearLayout>
