<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_actionbar"
        android:orientation="vertical">

        <include layout="@layout/layout_status_bar"></include>

        <include layout="@layout/layout_actionbar"></include>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_modify_goods_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45dp"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:hint="请输入发布商品的名称"
                    android:paddingStart="@dimen/size_15dp"
                    android:textSize="@dimen/text_size_14sp" />

                <EditText
                    android:id="@+id/et_modify_goods_content"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_100dp"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:background="@color/white"
                    android:gravity="top|left"
                    android:hint="请详细描述您将要发布的商品"
                    android:inputType="textMultiLine"
                    android:padding="@dimen/size_15dp"
                    android:scrollbars="vertical"
                    android:textSize="@dimen/text_size_14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:orientation="horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcv_modify_goods_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/size_60dp"
                        android:layout_height="45dp"
                        android:gravity="center|start"
                        android:paddingStart="@dimen/size_20dp"
                        android:text="分类"
                        android:textColor="@color/primaryText"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/modify_goods_cate"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:hint="请选择您的分类"
                        android:maxLines="1"
                        android:paddingStart="@dimen/size_5dp"
                        android:textColor="@color/primaryText"
                        android:textColorHint="@color/thirdText"
                        android:textSize="@dimen/text_size_14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/size_60dp"
                        android:layout_height="45dp"
                        android:gravity="center|start"
                        android:paddingStart="@dimen/size_20dp"
                        android:text="售价"
                        android:textColor="@color/primaryText"
                        android:textSize="15sp" />

                    <com.xw.repo.XEditText
                        android:id="@+id/modify_goods_price"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:ellipsize="end"
                        android:hint="请输入售卖理想价位"
                        android:maxLines="1"
                        android:paddingStart="@dimen/size_5dp"
                        android:textColor="@color/primaryText"
                        android:textColorHint="@color/thirdText"
                        android:textSize="@dimen/text_size_14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/size_60dp"
                        android:layout_height="45dp"
                        android:gravity="center|start"
                        android:paddingStart="@dimen/size_20dp"
                        android:text="地点"
                        android:textColor="@color/primaryText"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/modify_goods_location"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:hint="请选择您的出售地点"
                        android:maxLines="1"
                        android:paddingStart="@dimen/size_5dp"
                        android:textColor="@color/primaryText"
                        android:textColorHint="@color/thirdText"
                        android:textSize="@dimen/text_size_14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_modify_goods_upload"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45dp"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:layout_marginEnd="@dimen/size_20dp"
                    android:background="@drawable/selector_btn"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="提交"
                    android:textSize="@dimen/text_size_15sp" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/loading_coo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/loading_pb"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:indeterminateTint="@color/colorAccent"
                    android:indeterminateTintMode="src_atop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/loading_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="加载中..."
                    android:textColor="@color/cp_color_gray_deep"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/loading_pb" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>
    </ScrollView>
</LinearLayout>