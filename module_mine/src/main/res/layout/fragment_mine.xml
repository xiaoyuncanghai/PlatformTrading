<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MineFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_actionbar"
        android:orientation="vertical">

        <include layout="@layout/layout_status_bar"></include>

        <include layout="@layout/layout_actionbar"></include>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/fgt_mine_user"
            android:src="@drawable/tab_mine"
            android:layout_width="@dimen/size_60dp"
            android:layout_height="@dimen/size_60dp"
            android:layout_marginStart="@dimen/size_20dp"
            android:layout_marginTop="@dimen/size_20dp" />

        <!--<View
            app:layout_constraintTop_toBottomOf="@+id/fgt_mine_user"

            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10" />
-->
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>