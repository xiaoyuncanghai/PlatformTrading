<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_actionbar"
        android:orientation="vertical">

        <include layout="@layout/layout_status_bar"></include>

        <include layout="@layout/layout_actionbar"></include>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/size_10dp"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:layout_marginEnd="@dimen/size_10dp"
                    android:background="@drawable/activity_publish_sale_root_background"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_15dp"
                        android:layout_marginTop="@dimen/size_20dp"
                        android:text="名称:"
                        android:textColor="@color/gray_33"
                        android:textSize="@dimen/text_size_17sp" />

                    <EditText
                        android:id="@+id/et_publish_sale_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_15dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:hint="请输入求购商品的名称(品牌,品类等)"
                        android:paddingStart="@dimen/size_15dp"
                        android:paddingTop="@dimen/size_10dp"
                        android:paddingEnd="@dimen/size_15dp"
                        android:paddingBottom="@dimen/dp_10"
                        android:textColor="@color/gray_33"
                        android:textColorHint="@color/bg_999999"
                        android:textSize="@dimen/text_size_12sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/size_10dp"
                        android:background="@color/gray_EE" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_15dp"
                        android:layout_marginTop="@dimen/size_20dp"
                        android:text="价格:"
                        android:textColor="@color/gray_33"
                        android:textSize="@dimen/text_size_17sp" />

                    <EditText
                        android:id="@+id/publish_sale_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_15dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:hint="请输入您理想的价格"
                        android:inputType="phone|number"
                        android:paddingStart="@dimen/size_15dp"
                        android:paddingTop="@dimen/size_10dp"
                        android:paddingEnd="@dimen/size_15dp"
                        android:paddingBottom="@dimen/dp_10"
                        android:textColor="@color/gray_33"
                        android:textColorHint="@color/bg_999999"
                        android:textSize="@dimen/text_size_12sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/size_10dp"
                        android:background="@color/gray_EE" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_15dp"
                        android:layout_marginTop="@dimen/size_20dp"
                        android:text="分类:"
                        android:textColor="@color/gray_33"
                        android:textSize="@dimen/text_size_17sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/publish_sale_cate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:hint="请选择您的求购物品分类"
                            android:paddingStart="@dimen/size_15dp"
                            android:paddingTop="@dimen/size_10dp"
                            android:paddingEnd="@dimen/size_15dp"
                            android:paddingBottom="@dimen/dp_10"
                            android:textColor="@color/gray_33"
                            android:textColorHint="@color/bg_999999"
                            android:textSize="@dimen/text_size_12sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/size_17dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_turn" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/size_10dp"
                        android:background="@color/gray_EE" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_15dp"
                        android:layout_marginTop="@dimen/size_20dp"
                        android:text="地点:"
                        android:textColor="@color/gray_33"
                        android:textSize="@dimen/text_size_17sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/publish_sale_location"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:hint="请选择您的求购地点"
                            android:paddingStart="@dimen/size_15dp"
                            android:paddingTop="@dimen/size_10dp"
                            android:paddingEnd="@dimen/size_15dp"
                            android:paddingBottom="@dimen/dp_10"
                            android:textColor="@color/gray_33"
                            android:textColorHint="@color/bg_999999"
                            android:textSize="@dimen/text_size_12sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/size_17dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_turn" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/size_10dp"
                        android:background="@color/gray_EE" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_15dp"
                        android:layout_marginTop="@dimen/size_20dp"
                        android:text="描述:"
                        android:textColor="@color/gray_33"
                        android:textSize="@dimen/text_size_17sp" />

                    <EditText
                        android:id="@+id/et_publish_sale_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_15dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:hint="请详细描述您所需要的商品信息(最多200字)"
                        android:paddingStart="@dimen/size_15dp"
                        android:paddingTop="@dimen/size_10dp"
                        android:paddingEnd="@dimen/size_15dp"
                        android:paddingBottom="@dimen/dp_10"
                        android:textColor="@color/gray_33"
                        android:textColorHint="@color/bg_999999"
                        android:textSize="@dimen/text_size_12sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/size_10dp"
                        android:background="@color/gray_EE" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_15dp"
                        android:layout_marginTop="@dimen/size_20dp"
                        android:text="上传您所需商品的图片:"
                        android:textColor="@color/gray_33"
                        android:textSize="@dimen/text_size_17sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_15dp"
                        android:layout_marginTop="@dimen/size_20dp"
                        android:layout_marginBottom="@dimen/size_20dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rcv_publish_sale_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_publish_sale_upload"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45dp"
                    android:layout_marginStart="@dimen/size_10dp"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:layout_marginEnd="@dimen/size_10dp"
                    android:layout_marginBottom="@dimen/size_20dp"
                    android:background="@drawable/selector_btn"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="提交"
                    android:textSize="@dimen/text_size_15sp" />

            </LinearLayout>
        </ScrollView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/loading_coo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/loading_pb"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:indeterminateTint="@color/colorAccent"
                android:indeterminateTintMode="src_atop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/loading_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="加载中..."
                android:textColor="@color/cp_color_gray_deep"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/loading_pb" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

</LinearLayout>
