<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_actionbar"
        android:orientation="vertical">

        <include layout="@layout/layout_status_bar"></include>

        <include layout="@layout/layout_actionbar"></include>
    </LinearLayout>


    <EditText
        android:id="@+id/et_publish_sale_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_120dp"
        android:layout_marginTop="@dimen/size_20dp"
        android:background="@color/white"
        android:gravity="top|left"
        android:hint="请详细描述您所需要的求购商品"
        android:inputType="textMultiLine"
        android:padding="@dimen/size_15dp"
        android:scrollbars="vertical"
        android:textSize="@dimen/text_size_14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/size_20dp"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_publish_sale_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/img_publish_sale_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:src="@drawable/add_image_upload" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/size_20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/size_60dp"
            android:layout_height="45dp"
            android:gravity="center|start"
            android:paddingStart="@dimen/size_20dp"
            android:text="开价"
            android:textColor="@color/primaryText"
            android:textSize="15sp" />

        <com.xw.repo.XEditText
            android:id="@+id/publish_sale_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:ellipsize="end"
            android:hint="请输入您的理想价位"
            android:maxLines="1"
            android:paddingStart="@dimen/size_5dp"
            android:textColor="@color/primaryText"
            android:textColorHint="@color/thirdText"
            android:textSize="@dimen/text_size_14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/size_20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/size_60dp"
            android:layout_height="45dp"
            android:gravity="center|start"
            android:paddingStart="@dimen/size_20dp"
            android:text="地点"
            android:textColor="@color/primaryText"
            android:textSize="15sp" />

        <com.xw.repo.XEditText
            android:id="@+id/publish_sale_location"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:ellipsize="end"
            android:hint="请输入您的求购地点"
            android:maxLines="1"
            android:paddingStart="@dimen/size_5dp"
            android:textColor="@color/primaryText"
            android:textColorHint="@color/thirdText"
            android:textSize="@dimen/text_size_14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_publish_sale_upload"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45dp"
        android:layout_marginStart="@dimen/size_20dp"
        android:layout_marginTop="@dimen/size_20dp"
        android:layout_marginEnd="@dimen/size_20dp"
        android:background="@drawable/selector_btn"
        android:enabled="false"
        android:gravity="center"
        android:text="提交"
        android:textSize="@dimen/text_size_15sp" />


</LinearLayout>
