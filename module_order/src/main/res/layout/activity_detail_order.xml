<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_actionbar"
        android:orientation="vertical">

        <include layout="@layout/layout_status_bar"></include>

        <include layout="@layout/layout_actionbar"></include>
    </LinearLayout>-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_20dp"
                android:layout_marginTop="@dimen/size_20dp"
                android:layout_marginEnd="@dimen/size_20dp"
                android:text="订单号:"
                android:textColor="@color/primaryText"
                android:textSize="@dimen/size_15dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/size_20dp"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginRight="@dimen/size_20dp"
                android:background="@color/text_908f94"
                android:layerType="software" />

            <TextView
                android:id="@+id/order_detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_20dp"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginEnd="@dimen/size_20dp"
                android:text="订单描述: "
                android:textColor="@color/secondaryText"
                android:textSize="@dimen/size_13dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/size_20dp"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginRight="@dimen/size_20dp"
                android:background="@color/text_908f94"
                android:layerType="software" />

            <TextView
                android:id="@+id/order_detail_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_20dp"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginEnd="@dimen/size_20dp"
                android:text="订单金额: "
                android:textColor="@color/primaryText"
                android:textSize="@dimen/size_15dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/size_20dp"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginRight="@dimen/size_20dp"
                android:background="@color/text_908f94"
                android:layerType="software" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/order_detail_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:layout_marginEnd="@dimen/size_5dp"
                    android:text="联系人: "
                    android:ellipsize="end"
                    android:textColor="@color/secondaryText"
                    android:textSize="@dimen/size_10dp" />

                <TextView
                    android:id="@+id/order_detail_phone"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_5dp"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:layout_marginEnd="@dimen/size_20dp"
                    android:text="联系电话: "
                    android:textAlignment="viewEnd"
                    android:textColor="@color/secondaryText"
                    android:textSize="@dimen/size_10dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/size_20dp"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginRight="@dimen/size_20dp"
                android:background="@color/text_908f94"
                android:layerType="software" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/size_20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/order_detail_img1"
                    android:background="@drawable/goods_detail_img_background"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="@dimen/size_100dp"
                    android:layout_height="@dimen/size_100dp" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/order_detail_img2"
                    android:background="@drawable/goods_detail_img_background"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginStart="@dimen/size_10dp"
                    android:layout_width="@dimen/size_100dp"
                    android:layout_height="@dimen/size_100dp" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/order_detail_img3"
                    android:background="@drawable/goods_detail_img_background"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginStart="@dimen/size_10dp"
                    android:layout_width="@dimen/size_100dp"
                    android:layout_height="@dimen/size_100dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/order_detail_type_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_20dp"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginEnd="@dimen/size_20dp"
                android:text=""
                android:textColor="@color/secondaryText"
                android:textSize="@dimen/size_13dp" />

            <TextView
                android:id="@+id/order_detail_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_20dp"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginEnd="@dimen/size_20dp"
                android:text=""
                android:textColor="@color/secondaryText"
                android:textSize="@dimen/size_13dp" />
        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_marginBottom="@dimen/size_20dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/size_40dp"
            android:layout_marginTop="@dimen/size_5dp"
            android:layout_marginEnd="@dimen/size_40dp"
            android:layout_marginBottom="@dimen/size_5dp"
            android:layout_weight="1"
            android:background="@drawable/order_detail_bg_background"
            android:gravity="center"
            android:text="取消"
            android:visibility="gone"
            android:textAlignment="center"
            android:textSize="@dimen/size_15dp" />

        <TextView
            android:id="@+id/order_apply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/size_40dp"
            android:layout_marginTop="@dimen/size_5dp"
            android:layout_marginEnd="@dimen/size_40dp"
            android:layout_marginBottom="@dimen/size_5dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:background="@drawable/order_detail_bg_background"
            android:gravity="center"
            android:text="申请资金方"
            android:textSize="@dimen/size_15dp" />
    </LinearLayout>

</LinearLayout>